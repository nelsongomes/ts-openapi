{
  "name": "ts-openapi",
  "author": "Nelson Gomes <nelson.ricardo.gomes@gmail.com>",
  "license": "ISC",
  "version": "1.1.8",
  "description": "An openapi json generator based on joi information about APIs that will help you to maintain your API documentation up to date.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "openapi",
    "api",
    "documenting",
    "typescript"
  ],
  "scripts": {
    "test": "jest --verbose --runInBand",
    "clean": "rm -rf lib coverage",
    "prettier": "prettier --write '{.,{src,test}/**}/*.{js,jsx,ts,tsx,json,md}'",
    "prettier:check": "prettier --check '{.,{src,test}/**}/*.{js,jsx,ts,tsx,json,md}'",
    "tslint": "tslint -c ./tslint.json 'src/**/*.ts'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "start": "'ts-node' src/index.ts",
    "build": "rm -rf lib/ && tsc --pretty -p .",
    "update": "ncu -u && npm i",
    "release": "release-it",
    "release-dry-run": "release-it --dry-run"
  },
  "dependencies": {
    "axios": "1.11.0",
    "joi": "17.3.0",
    "lodash": "4.17.21",
    "node-object-hash": "2.3.10"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/lodash": "4.14.174",
    "@types/node": "24.1.0",
    "check-node-version": "4.0.3",
    "husky": "4.3.8",
    "jest": "29.7.0",
    "lint-staged": "10.5.3",
    "node-notifier": "8.0.1",
    "prettier": "1.19.1",
    "release-it": "19.0.4",
    "ts-jest": "29.2.5",
    "ts-node": "8.6.2",
    "tslint": "6.0.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-react": "4.2.0",
    "typescript": "5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nelsongomes/ts-openapi.git"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[tj]sx?$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coverageDirectory": "test-coverage/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "check-node-version --node 18 && check-node-version --npm 9 && lint-staged && tsc --noEmit -p . && npm test"
    }
  },
  "lint-staged": {
    "*.{js,ts,css}": [
      "prettier --write",
      "tslint"
    ]
  }
}
